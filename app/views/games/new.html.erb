<h1>
<% @grid.each do |letter| %>
<%= letter.upcase %>
<% end %>
</h1>

<form action="/score" method="post" data-turbo="false">
  <input type="text" name="word">
  <input type="submit" value="Submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @grid %>
</form>
